<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/swipe"
    android:scrollbarStyle="insideOverlay"
    tools:context=".nointernet.NoInternetActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="86.63dp"
            android:layout_height="71.54dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/group_2166" />

        <RelativeLayout
            android:id="@+id/parent_bottom"
            android:layout_alignParentBottom="true"
            android:background="#393939"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <TextView
                android:id="@+id/txt_connection"
                android:text="@string/no_internet_connection"
                android:layout_marginStart="@dimen/dp_15"
                android:textSize="@dimen/dp_15"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="21dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/btntryagain"
                android:layout_width="wrap_content"
                android:layout_marginStart="115dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:textSize="@dimen/dp_15"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#E5A74F"
                android:text="@string/try_again"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>