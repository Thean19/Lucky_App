<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment_details_post.Detail_2">
    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"
            android:id="@+id/layout">
            <View
                android:visibility="gone"
                android:id="@+id/line"
                style="@style/line"
                android:layout_height="@dimen/dp_4"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_below="@+id/line"
                android:text="@string/contact"
                android:textSize="18dp"
                android:textColor="#999999"
                android:fontFamily="@font/opensans_semibold"/>

            <View
                android:visibility="gone"
                android:id="@+id/line1"
                style="@style/line"
                android:layout_below="@+id/description"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_below="@+id/line1"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="100dp"
                android:background="@color/gray_btn_bg_color"
                android:scaleType="centerCrop" >
                <TextView
                    android:id="@+id/us_name"
                    android:text="VIP Store Sen Sok 168"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/black"
                    android:paddingTop="13dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/map_icon"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/group_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/map_icon"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_24">
                    <TextView
                        android:id="@+id/count_view"
                        android:text="@string/view"
                        android:textSize="12dp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/view"
                        android:textSize="12dp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFFFF"
                android:id="@+id/cr_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-45dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:elevation="5dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cr_img">
<!--                <TextView-->
<!--                    android:id="@+id/tv_name"-->
<!--                    android:textSize="@dimen/dp_24"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="20dp" />-->
<!--                <View-->
<!--                    android:id="@+id/line7"-->
<!--                    android:layout_marginTop="@dimen/dp_4"-->
<!--                    android:background="@color/colorLightGray"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"/>-->
                <RelativeLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_email"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:fontFamily="@font/opensans_semibold"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/email"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="94dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text=":"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_15" />
                    <TextView
                        android:layout_marginStart="115dp"
                        android:id="@+id/tv_email"
                        android:textSize="15dp"
                        android:textColor="#333333"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </RelativeLayout>
                <View
                    android:layout_below="@+id/linearLayout"
                    android:id="@+id/line8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    style="@style/line"/>
                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_below="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:fontFamily="@font/opensans_semibold"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/phone"
                        android:textColor="#333333" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text=":"
                        android:textSize="@dimen/dp_15"
                        android:textColor="#333333"
                        android:layout_marginStart="94dp"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:layout_marginStart="115dp"
                        android:id="@+id/tv_phone"
                        android:text=""
                        android:textSize="15dp"
                        android:textColor="#333333"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <View
                    android:layout_below="@+id/linearLayout1"
                    android:id="@+id/line9"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="10dp"
                    style="@style/line"/>
                <LinearLayout
                    android:visibility="gone"
                    android:paddingStart="@dimen/dp_8"
                    android:id="@+id/linearLayout2"
                    android:layout_below="@+id/line9"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/maskg_group1"
                        android:textColor="@color/black"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24" />
                    <TextView
                        android:id="@+id/address"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textSize="14sp"
                        android:paddingStart="@dimen/dp_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>