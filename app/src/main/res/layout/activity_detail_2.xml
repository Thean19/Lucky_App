<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment_details_post.Detail_2">
<androidx.core.widget.NestedScrollView
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">
        <View
            android:id="@+id/line"
            style="@style/line"
            android:layout_height="@dimen/dp_4"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/line"
            android:padding="@dimen/dp_8dp"
            android:text="@string/contact"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <View
            android:id="@+id/line1"
            style="@style/line"
            android:layout_below="@+id/description"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_below="@+id/line1"
            android:layout_margin="@dimen/dp_16"
            android:layout_height="100dp"
            android:background="@color/gray_btn_bg_color"
            android:scaleType="centerCrop" >
            <TextView
                android:id="@+id/us_name"
                android:text="VIP Store Sen Sok 168"
                android:textSize="@dimen/dp_24"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/map_icon"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icons8_google_maps_100"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/map_icon"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_24">
                <TextView
                    android:id="@+id/count_view"
                    android:text="@string/view"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/view"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="3dp"
            app:civ_border_color="#FFFFFFFF"
            android:id="@+id/cr_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="-45dp"
            android:elevation="5dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cr_img"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/white"
            android:elevation="4dp"
            android:paddingBottom="24dp">
            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/dp_24"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />
            <View
                android:id="@+id/line7"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_below="@+id/line7"
                android:paddingTop="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/call"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:layout_marginStart="@dimen/dp_4"
                    android:id="@+id/tv_phone"
                    android:paddingStart="@dimen/dp_4"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_below="@+id/linearLayout"
                android:id="@+id/line8"
                android:background="@color/colorLightGray"
                style="@style/line"/>
            <LinearLayout
                android:paddingStart="@dimen/dp_8"
                android:id="@+id/linearLayout1"
                android:layout_below="@+id/line8"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/path_3746"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:layout_marginStart="@dimen/dp_4"
                    android:id="@+id/tv_email"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingStart="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_below="@+id/linearLayout1"
                android:id="@+id/line9"
                android:background="@color/colorLightGray"
                style="@style/line"/>
            <LinearLayout
                android:paddingStart="@dimen/dp_8"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/line9"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/maskg_group1"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:id="@+id/address"
                    android:layout_marginStart="@dimen/dp_4"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</FrameLayout>