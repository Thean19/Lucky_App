<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_Register.SelectUserTypeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableLeft="@drawable/back_arrow_x1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_option"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:gravity="center_vertical"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/public_user"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:layout_margin="15dp"
        android:background="@drawable/background_card">
        <TextView
            android:id="@+id/tv_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorPrimary"
            android:text="@string/publicc"/>
        <TextView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_public"
            android:textSize="15dp"
            android:fontFamily="@font/opensans_regular"
            android:text=""/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/arrow_right_brown"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/other_dealer"
        android:layout_below="@+id/public_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:padding="@dimen/dp_16"
        android:background="@drawable/background_card">
        <TextView
            android:id="@+id/tv_dealer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorPrimary"
            android:text="@string/dealer"/>
        <TextView
            android:id="@+id/location_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dealer"
            android:text=""/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/arrow_right_brown"/>

    </RelativeLayout>


</RelativeLayout>