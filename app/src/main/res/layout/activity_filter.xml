<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEEF4"
    tools:context=".Startup.Filter">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_result"
            android:drawableStart="@drawable/back_arrow"
            android:text=""
            android:drawablePadding="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dp_18"
            android:text="@string/filter"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_done"
            android:text="@string/done"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_filter"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/myRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="#EFEEF4">

            <LinearLayout
                android:id="@+id/linea_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rela_Type"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/icType_sr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/icon_null"
                        android:layout_marginTop="5dp"

                        />
                    <TextView
                        android:id="@+id/title_type"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textSize="@dimen/dp_20"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icType_sr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="@dimen/dp_8"
                        android:id="@+id/search_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:text="@string/all"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:layout_toRightOf="@id/icType_sr"
                        android:layout_below="@+id/title_type"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linea_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rela_Category"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_Type"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    >
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_null"
                        android:id="@+id/icCategory_sr"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/title_cate"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textSize="@dimen/dp_20"
                        android:text="@string/category"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icCategory_sr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="@dimen/dp_8"
                        android:id="@+id/search_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:text="@string/all"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:layout_below="@+id/title_cate"
                        android:layout_toRightOf="@+id/icCategory_sr"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linea_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rela_brand"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_Brand"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_null"
                        android:id="@+id/icBrand_sr"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/title_brand"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textSize="@dimen/dp_20"
                        android:text="@string/brand"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icBrand_sr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginStart="@dimen/dp_8"
                        android:id="@+id/search_brand"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:text="@string/all"
                        android:textAllCaps="false"
                        android:layout_toRightOf="@+id/icBrand_sr"
                        android:layout_below="@+id/title_brand"
                        android:gravity="left|center_vertical"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linea_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rela_Year"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_Brand"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_null"
                        android:id="@+id/icYear_sr"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/title_year"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textSize="@dimen/dp_20"
                        android:text="@string/year"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icYear_sr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginStart="@dimen/dp_8"
                        android:id="@+id/search_year"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:text="@string/all"
                        android:textAllCaps="false"
                        android:layout_toRightOf="@+id/icYear_sr"
                        android:layout_below="@+id/title_year"
                        android:gravity="left|center_vertical"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rela_price"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela_Condition"
                    android:layout_marginTop="5dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/title_price"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="@string/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <SeekBar
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_below="@+id/title_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/mybutton"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rela_Year"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>