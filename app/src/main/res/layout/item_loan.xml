<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    app:strokeColor="#E8E8E8"
    app:strokeWidth="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="89dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image_available"
                android:layout_height="70dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/title"
                    android:text="Post title"
                    android:lines="1"
                    android:textSize="13dp"
                    android:textColor="#333333"
                    android:layout_marginTop="8.5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18" />

                <TextView
                    android:id="@+id/tv_price"
                    android:textColor="@color/colorPrimary"
                    android:text="0.00"
                    android:layout_below="@id/title"
                    android:layout_marginTop="8.5dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/llColor"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/tv_price"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_4">
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/tv_color1" />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginLeft="-8dp"
                        android:id="@+id/tv_color2" />
                    </LinearLayout>

                <TextView
                    android:id="@+id/cate"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="9dp"
                    android:visibility="visible"
                    android:textColor="#404040"
                    android:layout_toEndOf="@+id/llColor"
                    android:layout_below="@+id/tv_price"
                    android:text="Motorbike"
                    android:textSize="12dp" />

<!--                <TextView-->
<!--                    android:id="@+id/tv_status"-->
<!--                    android:textColor="@color/loan_pening"-->
<!--                    android:text="0.00"-->
<!--                    android:layout_below="@id/title"-->
<!--                    android:layout_marginTop="8.5dp"-->
<!--                    android:textSize="15dp"-->
<!--                    android:layout_marginRight="11dp"-->
<!--                    android:layout_alignEnd="@id/tv_price"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:fontFamily="@font/opensans_semibold"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content" />-->
                <TextView
                    android:id="@+id/pending_appprove"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text=""
                    android:textColor="#CCCCCC"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/item_type"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="11dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:text="TYPE"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignEnd="@id/title"
                    android:background="@drawable/roundimage_rent"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_height="25.5dp"
                    android:layout_marginRight="@dimen/dp_4">

<!--                    <TextView-->
<!--                        android:layout_gravity="right"-->
<!--                        android:gravity="center"-->
<!--                        android:id="@+id/item_type"-->
<!--                        android:textStyle="bold"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:textSize="12dp"-->
<!--                        android:text="type"-->
<!--                        android:layout_height="wrap_content" />-->

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_view"
                            android:textSize="12dp"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp" />

                        <TextView
                            android:id="@+id/view"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="7dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/view"
                            android:textSize="12dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_user"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/group_2293"
                            android:layout_gravity="center"
                            card_view:civ_border_color="@color/circle"
                            card_view:civ_border_width="2dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative"
            android:orientation="vertical"
            android:background="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="36dp">
<!--            <View-->
<!--                android:layout_alignParentTop="true"-->
<!--                style="@style/line"/>-->
            <!--<Button-->
                <!--android:id="@+id/btnrefresh"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAllCaps="false"-->
                <!--android:gravity="center"-->
                <!--android:background="#00FFFFFF"-->
                <!--android:drawableLeft="@drawable/refresh"-->
                <!--android:text="Pending" />-->
            <!--<Button-->
                <!--android:layout_marginStart="@dimen/dp_24"-->
                <!--android:id="@+id/btn_renew"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="#00FFFFFF"-->
                <!--android:drawableLeft="@drawable/refresh"-->
                <!--android:gravity="center"-->
                <!--android:paddingLeft="@dimen/dp_20"-->
                <!--android:text="Renew"-->
                <!--android:textAllCaps="false" />-->

            <TextView
                android:id="@+id/txt_date"
                android:text="OCT 26, 2019"
                android:textColor="#999999"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="15dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/btndelete"
                android:fontFamily="@font/opensans_semibold"
                android:padding="@dimen/dp_8dp"
                android:text="@string/button_edit"
                android:textAllCaps="false" />

            <Button
                android:layout_marginRight="2dp"
                android:id="@+id/btndelete"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:padding="@dimen/dp_8dp"
                android:text="@string/cancel" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>