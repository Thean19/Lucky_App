<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bottomsheet_back"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bt_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:text="@string/select"
            android:drawableRight="@drawable/icon_clear"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_camera"
            android:layout_below="@id/bt_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:textColor="@color/black"
            android:text="@string/dialog_camera"
            android:drawableLeft="@drawable/ic_photo_camera"
            android:drawablePadding="@dimen/dp_18"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_gallery"
            android:layout_below="@id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_16"
            android:drawableLeft="@drawable/ic_insert_photo"
            android:drawablePadding="@dimen/dp_18"
            android:text="@string/photo"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_below="@id/tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/cancel"
            android:background="@drawable/button"/>

    </RelativeLayout>

</RelativeLayout>