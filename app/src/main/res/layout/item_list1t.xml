<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="160dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:id="@+id/relative_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/android_vector">
                    <TextView
                        android:id="@+id/ds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="hello"
                        android:textColor="@color/white" />
                    </RelativeLayout>
            </RelativeLayout>
<!--            <ImageView-->
<!--                android:id="@+id/image"-->
<!--                android:layout_width="160dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:layout_height="match_parent" />-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title"
                    android:text="title"
                    android:lines="1"
                    android:textSize="14dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
<!--                <TextView-->
<!--                    android:id="@+id/date"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/title"-->
<!--                    android:layout_marginLeft="@dimen/dp_8"-->
<!--                    android:text="Phonm Penh - 2h ago"-->
<!--                    android:textSize="10dp" />-->
                <LinearLayout
                    android:id="@+id/llColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_price"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_8">

                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"

                        android:id="@+id/tv_color1" />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginLeft="-8dp"
                        android:id="@+id/tv_color2" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="$0.00"
                    android:textSize="12dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_discount"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_price"
                    android:text="$0.00"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="30dp"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/tv_discount"
                    android:text="Motorbike"
                    android:textSize="15sp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
<!--                    <TextView-->
<!--                        android:layout_gravity="right"-->
<!--                        android:textColor="@android:color/white"-->
<!--                        android:gravity="center"-->
<!--                        android:id="@+id/item_type"-->
<!--                        android:textSize="12dp"-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_marginBottom="32dp"-->
<!--                        android:layout_height="15dp" />-->
                    <TextView
                        android:id="@+id/item_type"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="32dp"
                        android:layout_gravity="right"
                        android:text="123"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/roundimage_rent" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/view"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/user_view"
                            android:textSize="10dp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <View
                android:layout_alignParentTop="true"
                style="@style/line"/>
            <!--<Button-->
                <!--android:id="@+id/btnrefresh"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAllCaps="false"-->
                <!--android:gravity="center"-->
                <!--android:background="#00FFFFFF"-->
                <!--android:drawableLeft="@drawable/refresh"-->
                <!--android:text="Pending" />-->
            <Button
                android:layout_marginStart="@dimen/dp_24"
                android:id="@+id/btn_renew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:textAllCaps="false" />

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/btnedit_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:text="@string/button_edit"
                android:textAllCaps="false" />

            <Button
                android:layout_marginEnd="@dimen/dp_24"
                android:id="@+id/btndelete"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:paddingLeft="@dimen/dp_16"
                android:text="@string/sold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>