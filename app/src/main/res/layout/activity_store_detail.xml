<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stores.StoreDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EAEAEA"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_shopname"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/shop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_shoplocation"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/locaion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_shopcontactphone"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/contact"/>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/textview_shopview"-->
<!--                android:fontFamily="@font/opensans_regular"-->
<!--                android:textAlignment="textEnd"-->
<!--                android:textSize="11sp"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:text="@string/view"/>-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/rating_star"
                    style="@style/RatingBar"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/colorPrimary"
                    android:secondaryProgressTint="@color/sunflower_yellow_500"
                    android:rating="5"
                    android:stepSize="0.5" />
                <TextView
                    android:id="@+id/number_of_rate"
                    android:text="number_rate"
                    android:layout_toEndOf="@+id/rating_star"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/imageview_shopprofile"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:id="@+id/view"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="12K"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"/>
                    <TextView
                        android:id="@+id/title_view"
                        android:text="@string/view"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-35dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_marginEnd="5dp"

                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="right"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_post"
                android:fontFamily="@font/opensans_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8dp">

            <androidx.recyclerview.widget.RecyclerView
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/recyclerview_store_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>