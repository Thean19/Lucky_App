<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_select"
        android:text="@string/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_8dp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/dp_24"/>
    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:textSize="15dp"
        android:padding="10dp"
        />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_margin="@dimen/dp_16"
        android:layout_below="@+id/title_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/new_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/new_ads"
            android:buttonTint="@color/colorPrimary"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/most_hit_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/most_hit_ads"
            android:buttonTint="@color/colorPrimary"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/low_to_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/low_to_high"
            android:buttonTint="@color/colorPrimary"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/high_to_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/high_to_low"
            android:buttonTint="@color/colorPrimary"
            android:textSize="14sp" />
    </RadioGroup>
    <Button
        android:id="@+id/btn_ok"
        android:layout_below="@+id/radio_group"
        android:background="@drawable/button"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>