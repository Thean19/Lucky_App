<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="5dp"
    android:padding="@dimen/dp_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="@dimen/dp_8dp">

        <TextView
            android:id="@+id/textview_posttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="Title"/>
        <TextView
            android:id="@+id/textview_shoplocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locaion"
            android:fontFamily="@font/opensans_bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_shopprofile"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher_round"
            card_view:civ_border_width="2dp"
            android:layout_gravity="right"
            card_view:civ_border_color="@color/circle"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textview_countview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View: 0"
            android:textAlignment="textEnd"
            android:fontFamily="@font/opensans_bold"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>