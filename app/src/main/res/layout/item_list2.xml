<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    app:strokeColor="#E8E8E8"
    app:strokeWidth="2dp"
    android:minHeight="100dp">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="15dp"
            android:layout_height="70dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:lines="1"
                android:text="title"
                android:layout_marginTop="9.5dp"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="13sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_discount"
                android:layout_below="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="7dp"
                android:text="$0.00"
                android:fontFamily="@font/opensans_regular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/tv_discount"
                android:text="$0.00"
                android:textSize="15dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_type"
                android:layout_width="52dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:text="TYPE"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_semibold"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_alignEnd="@id/title"
                android:background="@drawable/roundimage_rent"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:id="@+id/llColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_4">

                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/rounded_textview"
                    android:textColor="@android:color/white"
                    android:gravity="center"

                    android:id="@+id/tv_color1" />
                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/rounded_textview"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginLeft="-8dp"
                    android:id="@+id/tv_color2" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/li_postType"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imgbtn_unlike"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:src="@drawable/group_28"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:background="#ffff" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                    <!--                    <TextView-->
                    <!--                        android:layout_gravity="right"-->
                    <!--                        android:textColor="@android:color/white"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:id="@+id/item_type"-->
                    <!--                        android:textSize="12dp"-->
                    <!--                        android:layout_marginBottom="32dp"-->
                    <!--                        android:layout_width="30dp"-->
                    <!--                        android:layout_height="15dp" />-->
                    <!--                    <TextView-->
                    <!--                        android:id="@+id/item_type"-->
                    <!--                        android:layout_width="52dp"-->
                    <!--                        android:layout_height="22dp"-->
                    <!--                        android:layout_marginTop="8dp"-->
                    <!--                        android:text="TYPE"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:layout_gravity="right"-->
                    <!--                        android:textSize="12sp"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:background="@drawable/roundimage_rent" />-->

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="13dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_view"
                            android:textSize="12dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/user_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="12dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:visibility="gone"
                            android:id="@+id/img_user"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/group_2293"
                            android:layout_marginLeft="@dimen/dp_8"
                            card_view:civ_border_color="@color/circle"
                            card_view:civ_border_width="2dp" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

